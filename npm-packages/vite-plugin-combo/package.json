{
  "name": "vite-plugin-combo",
  "description": "The Vite plugin for Combo",
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && npm run build-plugin-types && npm run build-plugin && cp src/dev-server-index.html dist/",
    "build-plugin-types": "tsc --emitDeclarationOnly",
    "build-plugin": "esbuild src/index.ts --platform=node --format=esm --outfile=dist/index.js",
    "lint": "eslint --ext .ts ./src ./tests",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "package.json",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/node": "^20.19.0 || >=22.12.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "0.25.6",
    "eslint": "^9.0.0",
    "globals": "^16.3.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  }
}
